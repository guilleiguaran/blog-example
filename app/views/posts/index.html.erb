<h1>Blog de Guille</h1>

<% @posts.each do |post| %>
  <article>
    <h2><%=link_to post.title, post %></h2>
    <p><%= simple_format post.body %></p>
    <p>
       <%= link_to 'Edit', edit_post_path(post) %> |
       <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  </article>
<% end %>

<%= link_to 'New Post', new_post_path %>
